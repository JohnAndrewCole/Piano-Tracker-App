<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:fontFamily">@font/cabin_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:toolbarStyle">@style/AppToolbar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/primaryDarkestColor</item>
        <item name="actionMenuTextColor">@color/accentColor</item>
    </style>

    <style name="BottomNavBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/primaryDarkestColor</item>
    </style>

    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="backgroundTint">@color/primaryDarkestColor</item>
        <item name="title"></item>
        <item name="colorOnPrimary">@color/primaryDarkestColor</item>
    </style>

    <style name="FullScreenDialogToolbar">
        <item name="android:background">@color/primaryDarkestColor</item>
    </style>

</resources>