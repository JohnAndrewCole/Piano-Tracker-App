<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isCreatingSession"
            type="boolean" />

        <variable
            name="hasDateEntered"
            type="boolean" />

        <variable
            name="viewModel"
            type="com.johncole.pianotracker.viewmodels.SessionViewModel" />

        <variable
            name="hasPracticeActivities"
            type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SessionFragment">

        <EditText
            android:id="@+id/session_date_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:autofillHints="@string/date_input"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/date_input"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/session_time_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:autofillHints="@string/time_input"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/time_input"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/session_date_edit_text" />

        <EditText
            android:id="@+id/session_goal_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:autofillHints="@string/goal_input"
            android:ems="10"
            android:hint="@string/goal_input"
            android:inputType="textPersonName"
            android:text="@={viewModel.sessionGoal}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/session_time_edit_text" />

        <TextView
            android:id="@+id/duration_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/duration_colon"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/session_goal_edit_text" />

        <EditText
            android:id="@+id/txt_e_hours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:autofillHints="@string/duration_empty_time"
            android:ems="10"
            android:hint="@string/duration_empty_time"
            android:inputType="number"
            android:maxLength="2"
            android:text="@={viewModel.sessionHours}"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/duration_colon"
            app:layout_constraintEnd_toStartOf="@+id/duration_colon"
            app:layout_constraintStart_toStartOf="@+id/session_goal_edit_text"
            tools:text="00" />

        <EditText
            android:id="@+id/txt_e_minutes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:autofillHints="@string/duration_empty_time"
            android:ems="10"
            android:hint="@string/duration_empty_time"
            android:inputType="number"
            android:maxLength="2"
            android:text="@={viewModel.sessionMinutes}"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/duration_colon"
            app:layout_constraintEnd_toEndOf="@+id/session_goal_edit_text"
            app:layout_constraintStart_toEndOf="@+id/duration_colon"
            tools:text="00" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/practice_activity_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/recycler_view_border"
            android:padding="10dp"
            app:isGone="@{isCreatingSession}"
            app:layout_constraintBottom_toTopOf="@+id/btn_save_session"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_e_hours" />

        <Button
            android:id="@+id/btn_add_practice_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="#B3E5FC"
            android:backgroundTint="#B3E5FC"
            android:text="@string/add_a_practice_activity"
            android:textColor="#2C2828"
            app:cornerRadius="10dp"
            app:isGone="@{isCreatingSession}"
            app:layout_constraintBottom_toBottomOf="@+id/practice_activity_list"
            app:layout_constraintEnd_toEndOf="@+id/practice_activity_list"
            app:layout_constraintStart_toStartOf="@+id/practice_activity_list" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <Button
            android:id="@+id/btn_save_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:enabled="@{hasDateEntered}"
            android:text="@string/save_session"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_delete_session"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:enabled="false"
            android:text="@string/start_session"
            android:textSize="@dimen/button_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>