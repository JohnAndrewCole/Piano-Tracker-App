<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadingText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/amiko</item>
        <item name="android:background">@color/primaryLightColor</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="TextInputParent">
        <item name="android:ems">10</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:textSize">@dimen/paragraph_text</item>
    </style>

    <style name="TextInputText" parent="TextInputParent">
        <item name="android:inputType">textPersonName</item>
        <item name="android:maxLength">60</item>
    </style>

    <style name="TextInputDateTime" parent="TextInputParent">
        <item name="android:inputType">date</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="TextInputDuration" parent="TextInputParent">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextInputBpm" parent="TextInputParent">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
    </style>

    <style name="DropdownTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" />

    <style name="ListItemStandard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="ListItemStandardHeading" parent="ListItemStandard">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemStandardSubHeading" parent="ListItemStandard">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>